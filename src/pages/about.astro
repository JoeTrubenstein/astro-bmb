---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
// import LinkButton from "@components/LinkButton.astro";
import bmbsquare from "/assets/bmbsquare.webp";
import bmbmobile from "/assets/widebmbmobile.webp";
---

<Layout title={`About Me | ${SITE.title}`}>
  <Header />

  <main id="main-content">
    <div class="main-wrapper">
      <h1 aria-label="404 Not Found">About me</h1>
      <p>Page Not Found</p>



        <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
          <h2 class="font-bold text-3xl text-gray-800">
            Empowering the world with Astro.
          </h2>
          <p class="text-lg leading-relaxed text-slate-500">
            We're a multi-cultural team from around the world! We come from
            diverse backgrounds, bringing different personalities, experiences
            and skills to the job. This is what makes our team so special.
          </p>
        </div>
        <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-12">
          <div class="group"></div>
          <div class="mt-4 text-center">
            <h2 class="text-lg text-gray-800">Joe Trubenstein</h2>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  #main-content {
    @apply mx-auto max-w-4xl pt-12;
  }
  .main-wrapper {
    @apply mb-14 flex flex-col items-center justify-center p-4;
  }
  .main-wrapper h1 {
    @apply text-4xl font-bold text-skin-accent;
  }
  .main-wrapper p {
    @apply mt-4 text-2xl sm:text-3xl;
  }
</style>
